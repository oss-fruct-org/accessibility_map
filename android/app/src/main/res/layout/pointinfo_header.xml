<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp">

    <TextView
            android:id="@+id/pointinfo_header_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/PointInfoListText"
            android:gravity="center"
            android:paddingBottom="5dp"/>

    <TextView
            android:id="@+id/pointinfo_header_objectname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/PointInfoListTextMedium"
            android:gravity="center"
            android:padding="5dp"/>

    <TextView
            android:id="@+id/pointinfo_header_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/PointInfoListTextMedium"
            android:padding="5dp"/>

    <TextView
            android:id="@+id/pointinfo_header_getby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/PointInfoListTextMedium"
            android:visibility="gone"
            android:padding="5dp"/>


    <TextView
            android:id="@+id/pointinfo_header_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/PointInfoListTextMedium"
            android:visibility="gone"
            android:padding="5dp"/>

    <LinearLayout
            android:id="@+id/pointinfo_header_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="5dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/PointInfoListTextMedium"
                android:text="@string/web_site"/>

        <TextView
                android:id="@+id/pointinfo_header_site"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/PointInfoListTextMedium"
                android:textColor="@color/blue"/>

    </LinearLayout>




</LinearLayout>